
.edit-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.page-body{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.select-icon{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 99;
}

.icon{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon image{
  width: 150rpx;
  height: 150rpx;
}

.select-title{
  font-size: 30rpx;
  padding: 20rpx 0rpx;
  color: darkgray;
}

.image-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 100;
  background:rgba(2,2,2,0.6);
  align-items: center;
  justify-content: center;
}

.image-content{
  width: 85%;
  height: 85%;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 10rpx;
  overflow:auto;
}


.result-content{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result{
  width: 85%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.result-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.title{
  border-left-style:solid;
  border-width:8rpx;
  border-color: #3CC4A9;
  font-size: 35rpx;
  padding: 0rpx 10rpx;
}

.sub-item{
  width: 100%;
  margin-top: 15rpx;
  font-size: 30rpx;
}

.item{
  margin-left: 30rpx;
  padding-bottom: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.huishou-c{
  color: #215287;
}

.youhai-c{
  color: #EA3E30;
}

.si-c{
  color: #62423A;
}

.gan-c{
  color: #2E2C2A;
}

.close-button{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0rpx;
  z-index: 200;
  position: fixed;
  top: 10rpx;
}

.close-button image{
  width: 60rpx;
  height: 60rpx;
}

.image-upload{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.image-upload image{
  width: 200rpx;
  height: 140rpx;
  border-radius: 10rpx;
}